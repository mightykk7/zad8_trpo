<Page x:Class="Zad8_trpo.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zad8_trpo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <StackPanel>
                <Label Content="ID:"/>
                <Label Content="Пароль:"/>
                <Button Margin="5" Click="Button_Click_1">Войти</Button>
                <Button Margin="5" Click="Button_Click">Зарегистрироваться</Button>
            </StackPanel>
            <StackPanel Width="200">
                <TextBox Margin="0,5" Text="{Binding EnterDoctor.Id}"/>
                <TextBox Margin="0,5" Text="{Binding EnterDoctor.Password}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
